RUN echo "curl https://sh.rustup.rs -sSf | sh -s -- --default-toolchain stable -y && rustup component add clippy rustfmt rust-src && . ~/.cargo/env && cargo install sccache" > /usr/local/bin/install_rust \
    && chmod +x /usr/local/bin/install_rust \
    && echo '[[ ! "$PATH" =~ "$HOME/.cargo/bin:" ]] && export PATH="$HOME/.cargo/bin:$PATH"' > /etc/profile.d/99-path-cargo.sh \
    && echo "export RUSTC_WRAPPER=sccache" > /etc/profile.d/99-rustc-wrapper-sccache.sh

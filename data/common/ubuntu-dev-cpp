ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install --yes \
        ccache \
        clang-format \
        cmake \
        gdb \
        g++ \
        ninja-build \
        pkg-config \
    && echo 'export CMAKE_GENERATOR="Ninja"' > /etc/profile.d/01-cmake-ninja.sh
